<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Z64Utils_recreate_avalonia_ui"
    xmlns:v="using:Z64Utils_recreate_avalonia_ui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="Z64Utils_recreate_avalonia_ui.DListViewerWindow"
    x:DataType="vm:DListViewerWindowViewModel"
    Title="DList Viewer"
>
    <DockPanel>
        <TextBlock DockPanel.Dock="Top">something amazing going to happen here</TextBlock>
        <TextBlock DockPanel.Dock="Top" Text="{Binding SomeTextForNow}" />
        <StackPanel DockPanel.Dock="Top">
            <Slider Minimum="-180" Maximum="180" Value="{Binding ViewRotX}" />
            <Slider Minimum="-180" Maximum="180" Value="{Binding ViewRotY}" />
            <NumericUpDown Increment="100" Value="{Binding ViewPosX}" />
            <NumericUpDown Increment="100" Value="{Binding ViewPosY}" />
            <NumericUpDown Increment="100" Value="{Binding ViewPosZ}" />
        </StackPanel>
        <v:MyOpenGLControl Name="DLViewerGL" />
    </DockPanel>
</Window>