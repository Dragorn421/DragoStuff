<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Z64Utils_recreate_avalonia_ui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="Z64Utils_recreate_avalonia_ui.PickSegmentIDWindow"
    x:DataType="vm:PickSegmentIDWindowViewModel"
    Title="Pick Segment ID"
    SizeToContent="WidthAndHeight"
>
    <DockPanel>
        <TextBlock DockPanel.Dock="Top">Please enter a segment id.</TextBlock>
        <TextBlock DockPanel.Dock="Top" IsVisible="{Binding InvalidSegmentID}">Segment ID must be a
            value between 0 and 15.</TextBlock>
        <Button DockPanel.Dock="Right" Click="OnOKButtonClick"
            IsEnabled="{Binding !InvalidSegmentID}">OK</Button>
        <TextBox Text="{Binding SegmentIDStr}" />
    </DockPanel>
</Window>